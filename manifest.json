{
    "manifest_version": 3,
    "name": "TranslateMe - Translation Testing Extension",
    "key": "",
    "version": "1.0.3",
    "description": "Automatically detect translation issues in web applications with AI-powered analysis.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "identity",
        "tabs",
        "contextMenus",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "TranslateMe - Translation Tester"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "libs/logger.js",
                "libs/franc.js",
                "libs/languageDetector.js",
                "libs/supabase-local.js",
                "config/supabase.config.js",
                "config/api.config.js",
                "services/usageTracker.js",
                "content/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "libs/*.js",
                "content/content.css",
                "auth/*.html",
                "auth/*.js",
                "auth/*.css",
                "config/*.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "commands": {
        "scan-page": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Scan current page for translation issues"
        }
    },
    "oauth2": {
        "client_id": "YOUR_GOOGLE_OAUTH_CLIENT_ID",
        "scopes": [
            "openid",
            "email",
            "profile"
        ]
    }
}